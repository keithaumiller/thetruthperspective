{% if not page %}
  <h2><a href="{{ url }}">{{ label }}</a></h2>
{% else %}
  <h1>{{ label }}</h1>
{% endif %}

{# Display external image if the field is set #}
{% if node.field_external_image_url.0 %}
  <img src="{{ node.field_external_image_url.0.uri }}" alt="{{ node.title.value }}" />
{% endif %}

{% if node.field_tags is defined and node.field_tags|length > 0 %}
  <div class="tags">
    <strong>Tags:</strong>
    {% for tag in node.field_tags %}
      <a href="{{ path('entity.taxonomy_term.canonical', {'taxonomy_term': tag.target_id}) }}">
        {{ tag.entity.name.value }}
      </a>{% if not loop.last %}, {% endif %}
    {% endfor %}
  </div>
{% endif %}

{{ content }}